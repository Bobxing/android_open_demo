<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base_content_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">


    <TextView
        android:text="第一步："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="@dimen/dimen50">

        <TextView
            android:id="@+id/tv_show_phone"
            android:layout_centerVertical="true"
            android:text="手机号码："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/ev_input_phone"
            android:background="@drawable/selector_edittext_bg"
            android:layout_toRightOf="@+id/tv_show_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_first"
        android:layout_margin="15dp"
        android:background="@drawable/sdk_common_botton_bg"
        android:textColor="@color/white"
        android:text="SDK请求CLife获取授权码"
        android:layout_width="match_parent"
        android:layout_height="40dp" />


    <TextView
        android:text="第二步："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />





    <Button
        android:id="@+id/btn_second"
        android:layout_margin="15dp"
        android:background="@drawable/sdk_common_botton_bg"
        android:textColor="@color/white"
        android:text="携带授权码登录第三方服务器接口获取随机码"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <TextView
        android:text="第三步："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="@dimen/dimen50">

        <TextView
            android:id="@+id/code"
            android:layout_centerVertical="true"
            android:text="验证码："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/ev_input_code"
            android:background="@drawable/selector_edittext_bg"
            android:layout_toRightOf="@+id/code"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_third"
        android:layout_margin="15dp"
        android:background="@drawable/sdk_common_botton_bg"
        android:textColor="@color/white"
        android:text="SDK请求CLife验证验证码和随机码"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/tv_show_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
