<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@drawable/qmui_s_list_item_bg_with_border_bottom"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/bottom_dialog_list_item_img"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginLeft="@dimen/textSize12"
        android:scaleType="centerInside"/>

    <TextView
        android:id="@+id/bottom_dialog_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="middle"
        android:lines="1"
        android:layout_marginLeft="@dimen/dimen16"
        android:textColor="@color/qmui_s_list_item_text_color"/>

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <ViewStub
        android:id="@+id/bottom_dialog_list_item_mark_view_stub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout="@layout/qmui_bottom_sheet_list_item_mark"/>
</LinearLayout>